<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="sap.ui.demo.todo.controller.App" displayBlock="true">
	<Shell>
		<App>
			<Page title="{i18n>TITLE}" backgroundDesign="Solid">
				<content>
					<Input class="todoInput" id="addTodoItemInput" value="{/newTodo}" placeholder="{i18n>INPUT_PLACEHOLDER}" change=".addTodo"/>
					<List id="todoList"
						items="{ path: '/todos', events: { change: '.updateItemsLeftCount' } }"
						mode="MultiSelect"
						growing="true"
						growingScrollToLoad="true"
						showNoData="false"
						showSeparators="None"
						rememberSelections="false">
						<infoToolbar>
							<Toolbar>
								<Label id="itemsLeftLabel" text="{= ${/itemsLeftCount} === 1 ? ${/itemsLeftCount} + ' ' + ${i18n>ITEM_LEFT} : ${/itemsLeftCount} + ' ' + ${i18n>ITEMS_LEFT} }"/>
							</Toolbar>
						</infoToolbar>
						<CustomListItem class="todoListItem">
							<Input enabled="false" value="{title}"/>
							<Input enabled="false" value="{completed}"/>
						</CustomListItem>
					</List>
				</content>
				
			</Page>
		</App>
	</Shell>
</mvc:View>
